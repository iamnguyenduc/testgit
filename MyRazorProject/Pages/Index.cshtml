@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- CSS -->
<style>
    body {
        background: url('/images/bg.jpg') no-repeat center center;
        background-size: cover; 
        height: 100vh;
        margin: 0;
        color: rgb(0, 0, 0); 
        font-family: Arial, sans-serif; 
    }
    h1 {
        font-size: 3.5rem;
        font-weight: bold;
    }

    .main-content {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 30px;
        padding: 45px;
    }

    /* Text Section */
    .text-container {
        text-align: left;
    }

    /* Image Section */
    .image-container {
        text-align: center; /* Căn giữa ảnh */
    }

    .image-container img {
        max-width: 300px; /* Đảm bảo ảnh không vượt quá khung */
        height: auto; /* Đảm bảo tỷ lệ ảnh không bị méo */
        border-radius: 40px;
    }


    /* Responsive Styles cho màn hình nhỏ */
    @@media (max-width: 768px) {
        .main-content {
            flex-direction: column; /* Chuyển thành dọc cho màn hình nhỏ */
        }

        .text-container {
            text-align: center;
        }

        .image-container img {
            margin-top: 20px;
        }
    }

</style>

<div class="main-content">
    <div class="text-container">
        <h1>Hi, I'm s1mple</h1>
        <h1>a freelancer</h1>
        <a class="btn btn-danger" href="/About">ABOUT ME</a>
        <a class="btn btn-outline-danger" href="/Works">MY WORK</a>
    </div>
    <div class="image-container">
        <img class="side-image" src="/images/photo.jpg" alt="Photo">
    </div>
</div>
