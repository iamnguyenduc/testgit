@page
@model MyRazorProject.Pages_About.LoginModel

<h2>Login</h2>
<form method="post">
    <div>
        <label asp-for="Username"></label>
        <input type="text" asp-for="Username" />
        <span asp-validation-for="Username" style="color:red"></span>
    </div>
    <div>
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>
    <button type="submit">Login</button>
</form>

<div>
    <span asp-validation-summary="All" style="color:red"></span>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
